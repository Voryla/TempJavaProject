<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--配置全局参数-->
    <context-param>
        <param-name>jdbcDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <!--用户登陆servlet-->
    <servlet>
        <servlet-name>servletUserLogin</servlet-name>
        <servlet-class>com.zwk.servlets.ServletUserLogin</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletUserLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--使用上下文-->
    <servlet>
        <servlet-name>servletContext</servlet-name>
        <servlet-class>com.zwk.learnServletContext.GetServletContext</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletContext</servlet-name>
        <url-pattern>/useServletContext</url-pattern>
    </servlet-mapping>
    <!--使用Response-->
    <servlet>
        <servlet-name>aboutResponse</servlet-name>
        <servlet-class>com.zwk.aboutResponse.AboutResponse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>aboutResponse</servlet-name>
        <url-pattern>/aboutResponse</url-pattern>
    </servlet-mapping>
    <!--加载log4j-->
    <servlet>
        <servlet-name>lodLog4j</servlet-name>
        <servlet-class>com.zwk.loadLog4jServlet.LoadLog4jServlet</servlet-class>
        <init-param>
            <param-name>log4jInWebPath</param-name>
            <param-value>WEB-INF\classes\log4j.properties</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>lodLog4j</servlet-name>
        <url-pattern>/lodLog4j</url-pattern>
    </servlet-mapping>
    <!--使用Response.getOutPutStream向客户端写数据-->
    <servlet>
        <servlet-name>writeImageToClient</servlet-name>
        <servlet-class>com.zwk.writeImageToClient.WriteImageToClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>writeImageToClient</servlet-name>
        <url-pattern>/getImage</url-pattern>
    </servlet-mapping>
    <!--关于Request的学习-->
    <servlet>
        <servlet-name>aboutRequest</servlet-name>
        <servlet-class>com.zwk.aboutRequest.AboutRequest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>aboutRequest</servlet-name>
        <url-pattern>/aboutRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.zwk.servlets.register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!--设置默认页-->
<welcome-file-list>
    <welcome-file>login.html</welcome-file>
</welcome-file-list>

</web-app>